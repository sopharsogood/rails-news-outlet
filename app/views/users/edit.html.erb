<h1>Edit Account Settings</h1>

<%= form_for @user do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p><p>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </p><p>
        <%= f.label :bio %>
        <%= f.text_area :bio %>
    </p>
    <%= f.submit "Save Settings" %>
<% end %>