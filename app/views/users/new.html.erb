<h1>Create New User Account</h1>

<%= render partial: 'application/errors', locals: { form_subject: @user } %>

<%= form_for @user do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p><p>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </p><p>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <br>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    </p>
    <%= f.submit "Sign Up" %>
<% end %>