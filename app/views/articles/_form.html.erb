<%= render partial: 'application/errors', locals: { form_subject = article } %>

<%= form_for article, method: form_method do |f| %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p><p>
        <%= f.text_area :content %>
    </p>
    <%= f.hidden_field :author_id %>
    <%= f.submit submit_label %>
<% end %>